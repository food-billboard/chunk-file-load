{
  "compilerOptions": {
    "module":"esnext",
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "noEmit": false,
    "importHelpers": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "removeComments": false,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "baseUrl": ".",
    // "paths": {
    //   "~*":["src/*"]
    // },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "outDir": "lib",
    "rootDir": ".",
    "target":"ES2019",
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
